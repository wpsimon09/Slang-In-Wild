-- run this script on your local mysql database, dont forget to change env variables
CREATE DATABASE SlangInWild;
use SlangInWild;

CREATE TABLE SlangProjects (
    ProjectID INT PRIMARY KEY,
    ProjectName VARCHAR(255) NOT NULL,
	Author VARCHAR(255) NOT NULL,
    Description TEXT NOT NULL,
    Tags VARCHAR(100) NOT NULL,
    CreatedDate DATETIME DEFAULT CURRENT_TIMESTAMP,
    VerifiedDate DATETIME NOT NULL
);

CREATE TABLE PotentialSlagnProjects (
    ProjectID INT PRIMARY KEY,
    ProjectName VARCHAR(255) NOT NULL,
	Author VARCHAR(255) NOT NULL,
    Description TEXT NOT NULL,
    Tags VARCHAR(100) NOT NULL,
    ContactEmail VARCHAR(255) NOT NULL,
    SubmittedDate DATETIME DEFAULT CURRENT_TIMESTAMP
);

